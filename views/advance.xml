<!--                id="action_my_salary_total"-->
<!--                name="Faculty Payment Calculation"-->
<!--                parent="menu_payment"-->
<!--                action="total_payment_view"-->
<!--                sequence="10"/>-->
        <menuitem
                id="action_my_salary_advance_request_approved"
                name="Advance"
                parent="menu_view_faculty"
                action="advance_view"
                sequence="4"/>
    </data>
</odoo>